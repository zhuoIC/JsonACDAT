        android:layout_marginTop="25dp"
        android:text="Lista de contactos (GSON)" />

    <Button
        android:id="@+id/btnCreacionJSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
